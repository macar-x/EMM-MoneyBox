# Cashlens Environment Configuration
# Copy this file as .env and modify according to your environment

# =============================================================================
# Backend Configuration (Go)
# =============================================================================

# Database Type: mongodb or mysql
DB_TYPE=mongodb

# MongoDB Configuration
# Format: mongodb+srv://username:password@host/database?options
MONGO_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/cashlens?retryWrites=true&w=majority

# MySQL Configuration  
# Format: username:password@tcp(host:port)/database
MYSQL_DB_URI=username:password@tcp(localhost:3306)/cashlens

# Database Name
DB_NAME=cashlens

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Logging
LOG_FILE=./cashlens.log
LOG_LEVEL=info

# =============================================================================
# Flutter Configuration
# =============================================================================

# API Base URL (used when building Flutter app)
# For development: http://localhost:8080
# For production: https://api.yourdomain.com
API_BASE_URL=http://localhost:8080

# App Configuration
APP_ENV=development
APP_DEBUG=true

# =============================================================================
# Shared Configuration
# =============================================================================

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Security
# JWT_SECRET=your-secret-key-here  # For future authentication
# SESSION_SECRET=your-session-secret  # For future sessions
